<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.robertomartus.progresstracker.screens.progressableitem.ProgressableItemActivity$PlaceholderFragment">

    <FrameLayout
        android:padding="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <com.todddavies.components.progressbar.ProgressWheel
            ProgressWheel:rimColor="@color/progress_details_rim_color"
            ProgressWheel:barColor="@color/progress_details_bar_color"
            ProgressWheel:contourColor="@color/progress_details_circle_color"
            ProgressWheel:rimWidth="@dimen/progress_details_rim_width"
            ProgressWheel:barWidth="@dimen/progress_details_bar_width"
            android:id="@+id/progress_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/remove_button"
            android:layout_weight="1"
            android:text="@string/label_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_button"
            android:layout_weight="1"
            android:text="@string/label_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
