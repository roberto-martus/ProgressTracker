<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <RelativeLayout
        android:paddingLeft="@dimen/progress_display_padding_left"
        android:paddingRight="@dimen/progress_display_padding_right"
        android:paddingTop="@dimen/progress_display_padding_top"
        android:paddingBottom="@dimen/progress_display_padding_bottom"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <FrameLayout
            android:id="@+id/progress_display_fragment_container"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/remove_button"
            android:layout_weight="1"
            android:text="@string/label_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_button"
            android:layout_weight="1"
            android:text="@string/label_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
